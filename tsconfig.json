{
  "extends": "@tsconfig/next/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    // to trick auto imports
    "baseUrl": ".",
    "paths": {
      "@common/*": [
        "src/common/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@design-system": [
        "src/design-system/index"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "types/**/*.d.ts",
    "next-env.d.ts",
    "env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next-sitemap.ts"
  ],
  "exclude": [
    "node_modules",
    "__tests__",
    "__stories__"
  ]
}